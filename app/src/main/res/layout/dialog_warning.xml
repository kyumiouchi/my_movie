<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_48px"
    android:layout_marginLeft="110px"
    android:layout_marginRight="110px"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/linear_dialog_general"
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_title_general_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/dialog_message"
            android:textColor="@color/gray_txt_standard"
            android:textSize="@dimen/text_40px"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_title_general_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="15px"
            android:text="@string/dialog_message"
            android:textColor="@color/gray_txt_standard"
            android:layout_below="@id/text_title_general_top"
            android:textSize="@dimen/text_36px"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_title_general_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="50px"
            android:text="@string/dialog_message"
            android:textColor="@color/gray_txt_standard"
            android:layout_below="@id/text_title_general_middle"
            android:textSize="@dimen/text_36px"
            android:textStyle="normal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_margin"
            android:layout_below="@id/text_title_general_bottom">

            <Button
                android:id="@+id/text_cancel_general"
                android:layout_width="@dimen/discount_cancel_width"
                android:layout_height="@dimen/discount_cancel_height"
                android:layout_marginRight="@dimen/dialog_margin_button"
                android:layout_alignParentLeft="true"
                android:background="@drawable/button_transparent_rounded"
                android:text="@string/string_cancel"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/text_30px"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/text_confirm_dialog_general"
                android:layout_width="@dimen/discount_confirm_width"
                android:layout_height="@dimen/discount_confirm_height"
                android:background="@drawable/button_transparent_rounded"
               android:layout_alignParentRight="true"
                android:text="@string/string_confirm_maiusculo"
                android:textColor="@color/color_light_gray"
                android:textSize="@dimen/text_30px"
                android:textStyle="normal" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/viewblock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/linear_dialog_general"
        android:layout_alignLeft="@id/linear_dialog_general"
        android:layout_alignRight="@id/linear_dialog_general"
        android:layout_alignTop="@id/linear_dialog_general"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>